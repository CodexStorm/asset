<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <RelativeLayout
        android:id="@+id/rlTransferAssets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_margin="@dimen/dp_10">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvNewAssets"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_diplay"
            android:layout_alignLeft="@+id/rvNewAssets"
            android:layout_alignStart="@+id/rvNewAssets"
            android:layout_alignRight="@+id/rvNewAssets"
            android:layout_alignEnd="@+id/rvNewAssets">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_diplay"
            android:padding="5dp"
            android:text="Assets"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold"
            android:textColor="#000"

            />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/bg_diplay"
                android:padding="5dp"
                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTransferDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_diplay"
        android:layout_marginTop="13dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/rlTransferAssets"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:layout_toStartOf="@+id/linearLayout"
            android:layout_toLeftOf="@+id/linearLayout">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Request Id :"
                android:gravity="end"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Category Name :"
                android:gravity="end"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvhFaciltity"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Status :"
                android:gravity="end"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Request Type :"
                android:gravity="end"
                android:layout_marginTop="30dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:id="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp">


            <TextView
                android:id="@+id/tvRequestId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/tvRequestType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                />

        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/actionbarcolor"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Summary"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#fff"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/bBeforeRmApproval"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:visibility="gone"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Edit"
            android:id="@+id/bEdit"
            android:textColor="#ffffff"
            android:background="@color/actionbarcolor"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Delete"
            android:id="@+id/bDelete"
            android:textColor="#ffffff"
            android:background="#ff0000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/bAfterAdminApproval"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:visibility="gone"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Receive"
            android:id="@+id/bAccept"
            android:textColor="#ffffff"
            android:background="@color/actionbarcolor"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Reject"
            android:id="@+id/bReject"
            android:textColor="#ffffff"
            android:background="#ff0000"/>
    </LinearLayout>




</RelativeLayout>

