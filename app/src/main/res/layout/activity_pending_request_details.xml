<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/background_light"
    android:layout_height="match_parent">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:background="@color/actionbarcolor">

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Request Details"
         android:textSize="30dp"
         android:gravity="center"
         android:textColor="#fff"
         />

 </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="63dp"
                android:layout_marginStart="63dp"
                android:layout_marginTop="55dp"
                android:text="Asset Id  :"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                 />
            <TextView
                android:id="@+id/tvhAssetNomenclature"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="20dp"
                android:layout_alignEnd="@+id/textView5"
                android:layout_alignRight="@+id/textView5"
                android:text="Nomenclature  :"
                android:textStyle="bold"
                android:textColor="#000"

                />

            <TextView
                android:id="@+id/textView6"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tvhAssetNomenclature"
                android:layout_alignRight="@+id/tvhAssetNomenclature"
                android:layout_below="@+id/tvhAssetNomenclature"
                android:layout_marginTop="20dp"
                android:text="Asset Make  :"
                android:textColor="@android:color/background_dark"
                 />

            <TextView
                android:id="@+id/textView8"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView6"
                android:layout_alignRight="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="20dp"
                android:text="Request Type  :"
                android:textColor="@android:color/background_dark"
                 />

            <TextView
                android:id="@+id/textView9"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView8"
                android:layout_alignRight="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="20dp"
                android:text="Request To  :"
                android:textColor="@android:color/background_dark"
                 />

            <TextView
                android:id="@+id/textView10"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView9"
                android:layout_alignRight="@+id/textView9"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="20dp"
                android:text="Request Date  :"
                android:textColor="@android:color/background_dark"
                 />

            <TextView
                android:id="@+id/textView11"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView10"
                android:layout_alignRight="@+id/textView10"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="20dp"
                android:text="Reason  :"
                android:textColor="@android:color/background_dark"
                />

            <TextView
                android:id="@+id/textView12"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView11"
                android:layout_alignRight="@+id/textView11"
                android:layout_below="@+id/textView11"
                android:layout_marginTop="20dp"
                android:text="Status  :"
                android:textColor="@android:color/background_dark"
                />

            <TextView
                android:id="@+id/textView13"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView12"
                android:layout_alignRight="@+id/textView12"
                android:layout_below="@+id/textView12"
                android:layout_marginTop="20dp"
                android:text="Comments  :"
                android:textColor="@android:color/background_dark"
              />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginEnd="40dp">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvPendingAssetId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:layout_toEndOf="@+id/textView5" />
            <TextView
                android:id="@+id/tvNomenclature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPendingAssetId"
                android:layout_alignStart="@+id/tvPendingAssetId"
                android:layout_alignLeft="@+id/tvPendingAssetId"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/tvAssetMake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView8"
                android:layout_alignLeft="@+id/tvPendingAssetId"
                android:layout_alignStart="@+id/tvPendingAssetId"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPendingRequestType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView9"
                android:layout_alignLeft="@+id/tvAssetMake"
                android:layout_alignStart="@+id/tvAssetMake"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPendingRequestTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView10"
                android:layout_alignLeft="@+id/tvPendingRequestType"
                android:layout_alignStart="@+id/tvPendingRequestType"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPendingRequestDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView11"
                android:layout_alignLeft="@+id/tvPendingRequestTo"
                android:layout_alignStart="@+id/tvPendingRequestTo"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPendingReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView12"
                android:layout_alignLeft="@+id/tvPendingRequestDate"
                android:layout_alignStart="@+id/tvPendingRequestDate"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPendingStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView13"
                android:layout_alignLeft="@+id/tvPendingReason"
                android:layout_alignStart="@+id/tvPendingReason"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>