<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


k    <RelativeLayout
        android:id="@+id/rlLabour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="vertical"
        android:background="@drawable/square_box">

        <TextView
            android:id="@+id/tvLabourId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_2"
            android:text="1"/>
        <TextView
            android:id="@+id/tvLabourName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_2"
            android:layout_below="@+id/tvLabourId"
            android:text="2"/>
    </RelativeLayout>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbIsSelected"
        android:layout_alignTop="@+id/rlLabour"
        android:layout_alignRight="@+id/rlLabour"/>

</RelativeLayout>