<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:padding="5dp"
    >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="5dp"
        app:cardElevation="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardUseCompatPadding="true"
        android:layout_margin="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:id="@+id/imageView"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_id"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/nomenclature"
                android:layout_above="@+id/asset_make"
                android:layout_alignLeft="@+id/imageView"
                android:layout_alignStart="@+id/imageView" />
            <TextView
                android:id="@+id/asset_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:layout_alignTop="@+id/imageView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/imageView"
                android:textSize="16dp"
                android:fontFamily="sans-serif"
                android:layout_alignStart="@+id/asset_name" />

            <TextView
                android:id="@+id/asset_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignLeft="@id/imageView2"
                android:layout_below="@+id/asset_id"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="13dp"
                android:fontFamily="sans-serif"
                android:textSize="16dp"
                android:textColor="#000"

                android:layout_alignParentLeft="true" />
            <TextView
                android:id="@+id/asset_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/asset_name"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:textSize="16dp"
                android:textColor="#000"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/maker"
                android:layout_alignBottom="@+id/asset_make"
                android:layout_alignLeft="@+id/imageView2"
                android:layout_alignStart="@+id/imageView2" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

