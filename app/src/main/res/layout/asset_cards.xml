<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="3dp"
        android:padding="5dp"
        android:layout_marginBottom="3dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bordergreen_inside_white"

            >

            <TextView
                android:id="@+id/asset_id"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:text="2345"
                android:gravity="center"
                android:background="@color/actionbarcolor"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/asset_make"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="22dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Asset Make"
                android:layout_above="@+id/asset_name"
                android:layout_alignLeft="@+id/asset_name"
                android:layout_alignStart="@+id/asset_name" />
            <TextView
                android:id="@+id/asset_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="16dp"
                android:text="Nomenclature"
                android:layout_alignBaseline="@+id/asset_id"
                android:layout_alignBottom="@+id/asset_id"
                android:layout_toRightOf="@+id/asset_id"
                android:layout_toEndOf="@+id/asset_id"
                android:layout_marginLeft="38dp"
                android:layout_marginStart="38dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

