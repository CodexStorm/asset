<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_diplay"
        android:id="@+id/rlDetails">

        <TextView
            android:id="@+id/tvhAssetId"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57dp"
            android:layout_marginStart="57dp"
            android:layout_marginTop="20dp"
            android:text="Asset ID  :"
            android:textColor="@android:color/background_dark"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvhAssetName"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Asset Name  :"
            android:textColor="@android:color/background_dark"
            android:layout_below="@+id/tvhAssetId"
            android:layout_toLeftOf="@+id/tvAssetId"
            android:layout_toStartOf="@+id/tvAssetId" />

        <TextView
            android:id="@+id/tvhTransferTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Transfer To  :"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:layout_below="@+id/tvhAssetName"
            android:layout_alignRight="@+id/tvhAssetName"
            android:layout_alignEnd="@+id/tvhAssetName" />

        <TextView
            android:id="@+id/tvAssetId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textColor="@android:color/background_dark"
            android:layout_alignBaseline="@+id/tvhAssetId"
            android:layout_alignBottom="@+id/tvhAssetId"
            android:layout_toRightOf="@+id/tvhAssetId"
            android:layout_toEndOf="@+id/tvhAssetId"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />

        <TextView
            android:id="@+id/tvAssetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvhAssetName"
            android:layout_alignLeft="@+id/tvAssetId"
            android:layout_alignStart="@+id/tvAssetId"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/tvhEmployeeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Employee ID :"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:layout_below="@+id/tvhTransferTo"
            android:layout_alignLeft="@+id/tvhTransferTo"
            android:layout_alignStart="@+id/tvhTransferTo" />

        <TextView
            android:id="@+id/tvEmployeeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvhEmployeeId"
            android:textColor="@android:color/background_dark"
            android:layout_alignLeft="@+id/tvAssetName"
            android:layout_alignStart="@+id/tvAssetName" />
        <TextView
            android:id="@+id/tvTransferTo"
            android:textColor="@android:color/background_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvAssetName"
            android:layout_alignStart="@+id/tvAssetName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tvhTransferTo"
            android:layout_above="@+id/tvhEmployeeId" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlDetails"
            android:layout_alignLeft="@+id/rlDetails"
            android:layout_alignStart="@+id/rlDetails"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_diplay">
        <TextView
            android:id="@+id/tvhReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Reason  :"
            android:textStyle="bold"
            android:layout_marginLeft="57dp"
            android:textColor="@android:color/background_dark"
             />



        <TextView
            android:id="@+id/tvhComment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Comment  :"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:layout_below="@+id/tvhReason"
            android:layout_alignStart="@+id/tvhReason"
            android:layout_alignLeft="@+id/tvhReason"
            android:layout_marginTop="20dp"
             />

        <EditText
            android:id="@+id/etCommentsBox"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:ems="10"
            android:background="@drawable/bg_comment_box"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/background_dark"
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@+id/tvhComment"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

        />
            <Spinner
                android:id="@+id/spinnerRequestType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tvhReason"
                android:layout_alignLeft="@+id/tvhReason"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                />
        </RelativeLayout>
<RelativeLayout
    android:id="@+id/rlInitiateButton"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="@color/actionbarcolor"

    >
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_transfer"
        android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvInitiate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:layout_marginBottom="5dp"
            android:text="Initiate"
            android:layout_alignParentBottom="true"
            >
            </TextView>
</RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/actionbarcolor"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transfer Request"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#fff"
            />

    </RelativeLayout>


</RelativeLayout>

