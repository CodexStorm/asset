<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/background_light"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="63dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="55dp"
            android:text="Asset Id  :"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Asset Name  :"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark"
            android:layout_below="@+id/textView5"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Request Type  :"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:layout_below="@+id/textView6"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignEnd="@+id/textView6" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView8"
            android:layout_alignRight="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="21dp"
            android:text="Request To  :"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView9"
            android:layout_alignRight="@+id/textView9"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="23dp"
            android:text="Request Date  :"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView10"
            android:layout_alignRight="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="20dp"
            android:text="Reason  :"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView11"
            android:layout_alignRight="@+id/textView11"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="20dp"
            android:text="Status  :"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView12"
            android:layout_alignRight="@+id/textView12"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="18dp"
            android:text="Comments  :"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/textView13"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13"
            android:layout_toRightOf="@+id/textView13">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginLeft="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/rvComments">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvPendingAssetId"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:textColor="@android:color/background_dark"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView6"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
             />

        <TextView
            android:id="@+id/tvPendingAssetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:layout_above="@+id/textView8"
            android:layout_alignLeft="@+id/tvPendingAssetId"
            android:layout_alignStart="@+id/tvPendingAssetId"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvPendingRequestType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView9"
            android:layout_alignLeft="@+id/tvPendingAssetName"
            android:layout_alignStart="@+id/tvPendingAssetName"
            android:textSize="15sp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/tvPendingRequestTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView10"
            android:layout_alignLeft="@+id/tvPendingRequestType"
            android:layout_alignStart="@+id/tvPendingRequestType"
            android:textSize="15sp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/tvPendingRequestDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView11"
            android:layout_alignLeft="@+id/tvPendingRequestTo"
            android:layout_alignStart="@+id/tvPendingRequestTo"
            android:textSize="15sp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/tvPendingReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView12"
            android:layout_alignLeft="@+id/tvPendingRequestDate"
            android:layout_alignStart="@+id/tvPendingRequestDate"
            android:textSize="15sp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/tvPendingStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView13"
            android:layout_alignLeft="@+id/tvPendingReason"
            android:layout_alignStart="@+id/tvPendingReason"
            android:textSize="15sp"
            android:textColor="@android:color/background_dark"/>

    </RelativeLayout>

</LinearLayout>