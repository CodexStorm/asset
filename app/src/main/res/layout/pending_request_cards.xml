<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/cardPendingRequest"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/image_asset_make"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/item_name"
            android:layout_below="@+id/imageAssetRequestId"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp" />

        <TextView
            android:id="@+id/tvAssetMake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_asset_make"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_toEndOf="@+id/image_asset_make"
            android:layout_toRightOf="@+id/image_asset_make"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/image_asset_status"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_asset_make"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/status_icon" />

        <TextView
            android:id="@+id/tvAssetStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_asset_status"
            android:layout_alignLeft="@+id/tvAssetMake"
            android:layout_alignStart="@+id/tvAssetMake"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageAssetRequestId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/id_icon" />

        <TextView
            android:id="@+id/tvAssetRequestId"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageAssetRequestId"
            android:layout_alignLeft="@+id/tvAssetMake"
            android:layout_alignStart="@+id/tvAssetMake"
            android:textColor="@android:color/background_dark" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>