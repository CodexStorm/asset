<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/cardPendingRequest"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    card_view:cardMaxElevation="1dp"
    app:cardPreventCornerOverlap="false"
    android:background="#fff"
    app:cardUseCompatPadding="true"
    android:padding="15dp"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:layout_marginBottom="1dp">

        <ImageView
            android:id="@+id/image_asset_make"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_tag"
            android:layout_below="@+id/imageAssetRequestId"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="1dp" />

        <TextView
            android:id="@+id/tvAssetNomenclature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_asset_make"
            android:layout_marginLeft="34dp"
            android:textColor="#000"
            android:layout_marginStart="34dp"
            android:layout_toEndOf="@+id/image_asset_make"
            android:layout_toRightOf="@+id/image_asset_make"
             />


        <ImageView
            android:id="@+id/image_asset_status"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/image_asset_make"
            android:layout_marginTop="1dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_status"
            android:layout_alignLeft="@+id/image_asset_make"
            android:layout_alignStart="@+id/image_asset_make" />

        <TextView
            android:id="@+id/tvAssetMake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_alignBottom="@+id/image_asset_status"
            android:layout_alignLeft="@+id/tvAssetNomenclature"
            android:layout_alignStart="@+id/tvAssetNomenclature"
            />

        <ImageView
            android:id="@+id/imageAssetRequestId"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_id" />

        <TextView
            android:id="@+id/tvAssetRequestId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignBottom="@+id/imageAssetRequestId"
            android:layout_alignLeft="@+id/imageAssetRequestId"
            android:layout_alignStart="@+id/tvAssetNomenclature"
            android:textColor="#000" />
        <TextView
            android:id="@+id/tvAssetStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAssetMake"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:inputType="textCapWords"
            android:layout_alignStart="@+id/tvAssetMake"
            android:layout_alignLeft="@+id/tvAssetMake"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>